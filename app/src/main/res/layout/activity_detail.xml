<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailActivity"
    android:padding="@dimen/default_padding_margin">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/iv_detailphoto"
        app:layout_constraintDimensionRatio="2:1"
        android:src="@drawable/genshin3"/>

    <TextView
        android:id="@+id/tv_detailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_detailphoto"
        android:gravity="center"
        android:layout_marginTop="@dimen/default_padding_margin"
        android:textSize="18sp"
        android:text="idkucing"/>

    <TextView
        android:id="@+id/tv_detailname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_detailid"
        android:gravity="center"
        android:layout_marginTop="@dimen/default_padding_margin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="detail.jpg"/>

    <TextView
        android:id="@+id/tv_detaildescription"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/default_padding_margin"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_detailname"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Ini adalah kucing"/>

</androidx.constraintlayout.widget.ConstraintLayout>